@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Display";
}

<h1>Display</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>

        <div class="col-6">
            Create New Category
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>Department</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Id</td>
                        <td width="50%">@item.Name</td>
                        <td width="50%">@item.Designation</td>
                        <td width="50%">@item.Department.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3>No category exists</h3>
    }
    </div>

