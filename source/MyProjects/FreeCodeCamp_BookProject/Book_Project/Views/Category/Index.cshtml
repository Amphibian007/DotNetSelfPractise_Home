@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>

        <div class="col-6 text-right" >
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary">
            Create New Category
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="50%">@item.DisplayOrder</td>
                    <td class="text-center">
                        <div class="w-75 btn-group">
                            <a asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                   
                }
            </tbody>
        </table> 
    }
    else
    {
        <h3>No category exists</h3>
    }
</div> 

